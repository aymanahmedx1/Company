@model List<UserInRoleViewModel>
@{
    ViewData["Title"] = "AddOrRemoveUsers";
    var role = ViewBag.role;
}

<div class="container">
    <form asp-action="AddOrRemoveUsers" class="mt-5" asp-route-roleId="@role">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="form-group mb-1 d-flex">
                <input asp-for="@Model[i].IsChecked" class="mx-2" >
                <label asp-for="@Model[i].IsChecked" class="col-form-label">@Model[i].UserName</label>
            </div>
            <input type="hidden" asp-for="@Model[i].Id">
            <input type="hidden" asp-for="@Model[i].UserName">
            
        }
        <button type="submit" class="btn btn-success px-4 my-4"> Save </button>

    </form>
</div>