@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}
<div class="alert alert-success my-3 d-flex justify-content-center align-items-center w-50 mx-auto" role="alert">
    <h1> Roles </h1>
</div>
<a asp-action="Create" class="btn btn-primary">Create New Role</a>
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(x => x.Id)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Name)</th>
                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <partial name="ActionButtonsPartialView" model="@role.Id"></partial>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    @if (Model.Count() < 1 && !string.IsNullOrEmpty(ViewBag.SearchText))
    {
        <div class="alert alert-warning" role="alert">
            No Roles Match <span class="text-danger fw-bold">@ViewBag.SearchText</span>
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            No Roles Here... Add One
        </div>
    }
}