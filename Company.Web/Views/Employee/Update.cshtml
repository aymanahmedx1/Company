@model EmployeeDto
@{
    ViewData["Title"] = "Employee Update";
    var selectList = new SelectList(ViewBag.Departments, nameof(Department.Id), nameof(Department.Name));
}
<h1 class="my-3">Update Employee</h1>
@if (ViewBag.error == true)
{
    <div class="alert alert-danger" role="alert">
        @Html.ValidationSummary()

    </div>
}

<div class="container">
    <form asp-action="Update" class="mt-5">
        <div class="form-group mb-1">
            <label asp-for="Name" class="col-form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" >
        </div>
        <div class="form-group mb-1">
            <label asp-for="Age" class="col-form-label">Age</label>
            <input type="number" class="form-control" asp-for="Age" >
        </div>
        <div class="form-group mb-1">
            <label asp-for="Address" class="col-form-label">Address</label>
            <input type="text" class="form-control" asp-for="Address" >
        </div>
        <div class="form-group mb-1">
            <label asp-for="Salary" class="col-form-label">Salary</label>
            <input type="number" class="form-control" asp-for="Salary">
        </div>
        <div class="form-group mb-1">
            <label asp-for="Email" class="col-form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email" >
        </div>
        <div class="form-group mb-1">
            <label asp-for="PhoneNumer" class="col-form-label">PhoneNumer</label>
            <input type="tel" class="form-control" asp-for="PhoneNumer">
        </div>
        <div class="form-group mb-1">
            <label asp-for="HiringDate" class="col-form-label">HiringDate</label>
            <input type="date" class="form-control" asp-for="HiringDate" >
        </div>
        <div class="form-group mb-1">
            <label asp-for="DepartmentId" class="col-form-label">Department</label>
            <select asp-items="selectList" type="" class="form-control" asp-for="DepartmentId">
            </select>
        </div>
        <div class="form-group mb-1">
            <label asp-for="Image" class="col-form-label">Image</label>
            <input type="file" class="form-control" asp-for="Image" , accept=".png , .jpeg ,.jpg" value="@Model.ImageUrl">
            <input type="hidden" class="form-control" asp-for="ImageUrl" v>
        </div>
        <button type="submit" class="btn btn-success px-4 my-4"> Update </button>
        <a asp-action="index" class="btn btn-outline-primary px-3"> Back </a>

    </form>
</div>