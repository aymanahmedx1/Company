@model IEnumerable<DepartmentDto>
@{
    ViewData["Title"] = "Index";
}
<div class="alert alert-success my-3 d-flex justify-content-center align-items-center w-50 mx-auto" role="alert">
    <h1> Departments </h1>
</div>
<a asp-action="Create" class="btn btn-primary">Create New </a>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(x => x.Code)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Name)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.CreatedAt)</th>
                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.CreatedAt</td>
                    <partial name="ActionButtonsPartialView" model="@department.Id"></partial>

                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning" role="alert">
        No Department Here ... Add One
    </div>
}