@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="main">
    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <form method="post" id="signup-form" class="signup-form" asp-action="ForgetPassword">
                    <h2 class="form-title">Forget Password</h2>
                    <div class="form-group">
                        <input type="email" class="form-input" asp-for="Email" placeholder="Your Email" />
                    </div>
                    
                    <div class="form-group">
                        <input type="submit" name="submit" id="submit" class="form-submit"/>

                    </div>
                </form>
                <p class="loginhere">
                    <a asp-action="Login" class="loginhere-link">Back To Login</a>
                </p>
            </div>
        </div>
    </section>

</div>

