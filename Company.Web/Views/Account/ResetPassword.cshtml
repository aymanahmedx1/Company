@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main">
    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <form method="post" id="signup-form" class="signup-form" asp-action="ResetPassword">
                    <h2 class="form-title">Reset Password</h2>
                    <div class="form-group">
                        <input type="hidden" class="form-input" asp-for="Email" />
                        <input type="hidden" class="form-input" asp-for="Token" />
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-input" asp-for="Password" placeholder="Password" />
                        <span toggle="#password" class="zmdi zmdi-eye field-icon toggle-password"></span>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-input" asp-for="ConfirmPassword" placeholder="Confirm Password" />
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" id="submit" class="form-submit" value="Sign up" />
                    </div>
                </form>
                <p class="loginhere">
                    Have already an account ? <a asp-action="Login" class="loginhere-link">Reset Password</a>
                </p>
            </div>
        </div>
    </section>

</div>

