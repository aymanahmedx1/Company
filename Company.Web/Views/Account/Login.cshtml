@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main">
    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <form method="post" id="signup-form" class="signup-form" asp-action="Login">
                    <h2 class="form-title">Login</h2>
                    <div class="form-group">
                        <input type="email" class="form-input" asp-for="Email" name="email" id="email" placeholder="Your Email" />
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-input" asp-for="Password" placeholder="Password" />
                        <span toggle="#password" class="zmdi zmdi-eye field-icon toggle-password"></span>
                    </div>
                     <div class="d-flex justify-content-start align-items-center py-3">
                        <input type="checkbox" name="name" />
                        <label class="m-0 mx-2"> Remember Me</label>
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" id="submit" class="form-submit" value="Login" />

                    </div>
                </form>
                <p class="loginhere">
                    doesn't have account ? <a asp-action="Register" class="loginhere-link">Register here</a>
                </p>
                <a asp-action="ForgetPassword" class="btn btn-info-outline">Forget Password</a>
            </div>
        </div>
    </section>

</div>

